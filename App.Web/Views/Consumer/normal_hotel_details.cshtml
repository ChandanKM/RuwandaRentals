                            </section>
                        </div>
                        <!-- Room Policies -->
                        <div class="modal fade" id="modelPolicy" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content room-policies-box">
