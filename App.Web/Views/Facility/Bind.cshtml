@model App.Web.ViewModels.FacilityViewModel

@{
    ViewBag.Title = "LMK Maintenance";
}
<link href="~/Content/font-awesome.css" rel="stylesheet" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="~/Content/error-notifier.css" rel="stylesheet" />


@Scripts.Render("~/Scripts/jqueryNotification.js")
@Scripts.Render("~/Scripts/jquery.blockUI.js")
@Scripts.Render("~/Scripts/AppCommonScript.js")
<script src="~/Scripts/jquery.cookie.js"></script>
<form class="form-horizontal">
    @Html.ActionLink("Create Facility", "Create", "Facility")
    <div class="row">
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Manage Facilities</h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>

                <div class="widget-content no-padding">
                    <table class="table table-striped table-bordered table-hover table-checkable FacilityDT">
                        <thead>
                            <tr>
                                <th>
                                    Facility Id
                                </th>
                                <th>
                                    Facility Name
                                </th>
                                <th>
                                    Facility Type
                                </th>
                                <th>
                                    Facility description
                                </th>
                                <th>
                                    Facility Image
                                </th>
                                <th>
                                    Action
                                </th>


                            </tr>
                        </thead>
                        <tbody data-bind="foreach: Facility" id="FacilityDT">
                            <tr>

                                <td data-bind="text: Facility_Id"></td>
                                <td data-bind="text: Facility_Name"></td>

                                <td data-bind="text: Facility_Type"></td>
                                <td data-bind="text: Facility_descr"></td>
                               
                                <td> <img data-bind="attr:{src: Facility_Image_dir}" /></td>
                             
                                @*<td data-bind="text: Facility_Active_flag"></td>*@

                                <td>
                                    <a style="cursor:pointer" data-bind="click: editFacility">Edit</a>
                                    <a style="cursor:pointer" data-bind="click: deleteFacility">Delete</a>
                                </td>
                                @*<td>
                        <a style="cursor:pointer" data-bind="click: FacilityListVM.DeleteFacility">Delete</a>

                    </td>*@
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</form>

<script src="@Url.Content("~/Scripts/Facility/Bind.js")" type="text/javascript"></script>

