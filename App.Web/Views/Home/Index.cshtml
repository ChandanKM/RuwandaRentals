                        <li>
                            @*<div class="select_rooms icon-block">
                                    <i class="room-icon"></i>

                                    <input type="text" name="NoOfRoom" data-bind="value:RoomCount" maxlength="2" min="1" max="15" onkeypress='validate(event)' title="Should be Between 1 to 15" class="frm-field required" />
