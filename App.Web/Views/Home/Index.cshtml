<!-- Search For Hotels -->
<div class="search-criteria">
    <div class="wrap">
        <div class="search-for-hotels">
            <div class="hotel-banner-desc">
                <h2>Over <span>44000</span><br /> hotels in India</h2>
            </div>

            <div class="hotels-search">
                <h2>Search For Hotels</h2>
                <form id="formSearch">
                    <ul>
                        <li>
                            <div class="Search-filed icon-block">
                                <input hidden id="hdnLocationId" data-bind="value:City_Id" />
                                <i class="location-icon"></i><input type="text" id="txtLocation" name="Location" data-bind="value:Location" placeholder="City" class="required" />
