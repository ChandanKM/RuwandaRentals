@model App.Web.ViewModels.LocationViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div id='UserEdit'>
    <table class="table table-striped table-hover">
        <tr>
            <th style="display:none">Location_Id</th>
            <th>Location_desc</th>
            <th>Action</th>
        </tr>
        <tbody data-bind="foreach: Locations">
            <tr>
                <td style="display:none"><input data-bind='value: Location_Id' /></td>
                <td>
                    <input data-bind='value: Location_desc' />

                </td>
                <td>    <input id="btnCreate" type="button" value="Save" data-bind="click: LocationListVM.SaveLocation" class="btn btn-primary btn-medium" /></td>
            </tr>

        </tbody>
    </table>
</div>






<script src="@Url.Content("~/Scripts/Location/EditlocationById.js")" type="text/javascript"></script>
