<script src="~/Scripts/jquery.cookie.js"></script>


    <div class="row">
        <div class="span10">
            <div class="page-header">
                <h2>Loyalty Information</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form class="form-horizontal">
                @Html.ActionLink("Create Loyalty", "Create", "Loyalty")
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget box">
                            <div class="widget-header">
                                <h4><i class="icon-reorder"></i> Manage Loyalty</h4>
                                <div class="toolbar no-padding">
                                    <div class="btn-group">
                                        <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="widget-content no-padding">
                                <table class="table table-striped table-bordered table-hover table-checkable divLoyaltyGrid">
                                    <thead>
                                        <tr>
                                            <th style="display:none">
                                                Id
                                            </th>
                                            <th>
                                                Loyal_Max_Allowed
                                            </th>
                                            <th>
                                                Loyal_Desc
                                            </th>
                                            <th> Loyal_Start_On</th>
                                            <th> Loyal_End_On</th>
                                            <th> Action</th>

                                        </tr>
                                    </thead>
                                    <tbody data-bind="foreach: LoyaltyList" id="divLoyaltyGrid">
                                        <tr>

                                            <td style="display:none" data-bind="text: Loyal_Id"></td>
                                            <td data-bind="text: Loyal_Max_Allowed"></td>
                                            <td data-bind="text: Loyal_Desc"></td>
                                            <td data-bind="text: Loyal_Start_On"></td>
                                            <td data-bind="text: Loyal_End_On"></td>

                                            <td>
                                                <a style="cursor:pointer" data-bind="click: suspendLoyalty">Suspend</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>           </form>
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/Loyalty/BindLoyalty.js")" type="text/javascript"></script>
