@{
    ViewBag.Title = "::ManageLocation::";
}

<link href="~/Content/error-notifier.css" rel="stylesheet" />

@Scripts.Render("~/Scripts/jqueryNotification.js")
@Scripts.Render("~/Scripts/jquery.blockUI.js")
@Scripts.Render("~/Scripts/AppCommonScript.js")

<div id="divManageLocation">
    <div class="row">
        <div class="col-lg-12">
            <input type="button" id="btnCreate" value="Add New" class="btn btn-lg btn-primary" />
        </div>
    </div>
    <br />
    <div class="widget box" style="display:none" id="divAddNewLocation">
        <div class="widget-header">
            <h4><i class="icon-reorder"></i>Create New Location</h4>
        </div>
        <div class="widget-content">
            <input type="hidden" data-bind="value:Id" />
            <div class="form-group">
                <label class="col-md-3 control-label">City <span class="required">*</span></label>
                <div class="col-md-9">
                    <input id="City" class="form-control input-width-xlarge" type="text" data-bind="value: City" />
                </div>
            </div><br /><br />
            <div class="form-group">
                <label class="col-md-3 control-label">Location <span class="required">*</span></label>
                <div class="col-md-9">
                    <textarea id="Location" rows="2" class="form-control input-width-xlarge" style="width:300px;" data-bind="value: Location"></textarea>
                </div>
            </div><br /><br /><br /><br />
            <div class="form-group">
                <label class="col-md-3 control-label">Pincode <span class="required">*</span></label>
                <div class="col-md-9">
                    <input id="City" class="form-control input-width-xlarge" type="text" data-bind="value: Pincode" />
                </div>
            </div>
            <br /><br />
            <div class="form-group">
                <label class="col-md-3 control-label">State <span class="required">*</span></label>
                <div class="col-md-9">
                    <input id="City" class="form-control input-width-xlarge" type="text" data-bind="value: State" />
                </div>
            </div>
            <br /><br />
            <div class="modal-footer">
                <div class="control-group">
                    <input id="btnCancel" type="button" value="Cancel" data-bind="click: Cancel" class="btn btn-lg btn-info" />
                    <input id="btnReset" type="button" value="Reset" data-bind="click: ResetForm" class="btn btn-lg btn-info" />
                    <input id="btnSave" type="button" value="Save" data-bind="click: Save" class="btn btn-lg btn-success" />
                    <input id="btnUpdate" type="button" value="Update" style="display:none" data-bind="click: Update" class="btn btn-lg btn-success" />
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Manage Locations</h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>

                <div class="widget-content no-padding">
                    <table class="table table-striped table-bordered table-hover table-checkable LocationGrid">
                        <thead>
                            <tr>
                                <th style="display:none"> Id </th>
                                <th> City </th>
                                <th> Location</th>
                                <th> Pincode</th>
                                <th> State</th>
                                <th>Options</th>

                            </tr>
                        </thead>
                        <tbody data-bind="foreach: ManageLocationList">
                            <tr>

                                <td style="display:none" data-bind="text: Id"></td>
                                <td data-bind="text: City"></td>
                                <td data-bind="text: Location"></td>
                                <td data-bind="text: Pincode"></td>
                                <td data-bind="text: State"></td>
                                <td>
                                    <a href="#" data-bind="click:Edit" class="btn btn-info btn-xs">Edit</a>

                                    <a data-bind="click:Delete" class="btn btn-danger btn-xs">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/ManageLocation/locationCRUD.js")" type="text/javascript"></script>
