@model App.Web.ViewModels.PromotionViewModel
@{
    ViewBag.Title = "Index";
}


<link href="~/Content/font-awesome.css" rel="stylesheet" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="~/Content/error-notifier.css" rel="stylesheet" />


<script src="~/Scripts/jquery.cookie.js"></script>
<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Create Promotion", "Create", "Promotion")
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4><i class="icon-reorder"></i> Manage Promotions</h4>
                <div class="toolbar no-padding">
                    <div class="btn-group">
                        <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                    </div>
                </div>
            </div>

            <div class="widget-content no-padding">
                <table class="table table-striped table-bordered table-hover table-checkable PropertiesDT">
                    <thead>
                        <tr>
                            <th style="display:none">
                                Id
                            </th>
                            <th>
                                Promo_Code
                            </th>
                            <th>
                                Promo_descr
                            </th>
                            <th>Promo_Type</th>
                            <th>Prop_Value</th>
                            <th> Promo_Start</th>
                            <th> Promo_End</th>
                            <th> Action</th>

                        </tr>
                    </thead>
                    <tbody data-bind="foreach: PromoList" id="PropertiesDT">
                        <tr>

                            <td style="display:none" data-bind="text: Promo_Id"></td>
                            <td data-bind="text: Promo_Code"></td>
                            <td data-bind="text: Promo_descr"></td>
                            <td data-bind="text: Promo_Type"></td>
                            <td data-bind="text: Prop_Value"></td>
                            <td data-bind="text: Promo_Start"></td>
                            <td data-bind="text: Promo_End"></td>

                            <td>
                                <a style="cursor:pointer" data-bind="click: suspendPromo">Suspend</a>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
                </div>
        </div>
        <script src="@Url.Content("~/Scripts/Promotion/BindPromotion.js")" type="text/javascript"></script>
