@model App.Web.ViewModels.RoomTypeViewModel

@{
    ViewBag.Title = "LMK Room Type";
}

<link href="~/Content/error-notifier.css" rel="stylesheet" />

@Scripts.Render("~/Scripts/jqueryNotification.js")
@Scripts.Render("~/Scripts/jquery.blockUI.js")
@Scripts.Render("~/Scripts/AppCommonScript.js")

<div id="divRoomTypes">
    <div class="row">
        <div class="col-lg-12">
            <input type="button" id="btnCreate" value="Add Room Type" class="btn  btn-success" />
        </div>
    </div><br />

    <div class="widget box" style="display:none" id="divCreateRoomType">
        <div class="widget-header">
            <h4><i class="icon-reorder"></i> Create Rooms Type</h4>
        </div>
        <div class="widget-content">
            <input type="hidden" style="display:none" data-bind="value:Room_TypeId" />
            <div class="form-group">
                <label class="col-md-3 control-label">Room Name</label>
                <div class="col-md-9">
                    <input id="Room_Name" class="form-control input-width-xlarge" type="text" data-bind="value: Room_Name" />
                </div>
            </div><br /><br />
            <div class="form-group">
                <label class="col-md-3 control-label">Description</label>
                <div class="col-md-9">
                    <textarea id="Room_Descr" rows="3" class="form-control input-width-xlarge" style="width:300px;" data-bind="value: Room_Descr"></textarea>
                </div>
            </div><br /><br /><br /><br />
            <div class="modal-footer">
                <div class="form-group">
                    <input id="btnCancel" type="button" value="Cancel" data-bind="click: Cancel" class="btn btn-lg btn-danger" />
                    <input id="btnReset" type="button" value="Reset" data-bind="click: ResetForm" class="btn btn-lg btn-info" />
                    <input id="btnSave" type="button" value="Save" data-bind="click: SaveRoomtype" class="btn btn-lg btn-primary" />
                    <input id="btnUpdate" type="button" value="Update" style="display:none" data-bind="click: UpdateRoomType" class="btn btn-lg btn-primary" />

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Manage Room Types</h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>

                <div class="widget-content no-padding">
                    <table class="table table-striped table-bordered table-hover table-checkable RoomTypeGrid">
                        <thead>
                            <tr>
                                <th style="display:none">
                                    Id
                                </th>
                                <th>
                                    Room Type
                                </th>
                                <th>
                                    Description
                                </th>
                                <th> Options</th>

                            </tr>
                        </thead>
                        <tbody data-bind="foreach: RoomtypeList">
                            <tr>

                                <td style="display:none" data-bind="text: Room_TypeId"></td>
                                <td data-bind="text: Room_Name"></td>
                                <td data-bind="text: Room_Descr"></td>

                                <td>
                                    <a data-bind="click:Edit" class="btn btn-default btn-xs">Edit</a>
                                    <a data-bind="click:Suspend" class="btn btn-info btn-xs">Suspend</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/RoomType/comman.js")" type="text/javascript"></script>
