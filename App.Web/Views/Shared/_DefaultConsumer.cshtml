                            <div class="dropdown-menu login-dropdown">
                                <h4 class="signin">Sign In</h4>
                                <div class="signin-fb signin-fb2">
                                    <div id="fb-root"></div>
                                    <h3><a href="#" onclick="PopUpFbLogin()"><i class="fb-icon"></i> Sign in with facebook</a></h3>
                                </div>
                                <div class="serperator serperator2">
                                    <hr />
                                    <span>OR</span>
                                </div>
                                @*@using (Html.BeginForm("Signin", "Signin", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
                                    {*@
                                @*@Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                                <form id="formSignIn">
                                    <span><input name="username" type="text" data-bind="value:Cons_mailid" placeholder="Email"></span>
                                    @*<span>@Html.TextBoxFor(m => m.Cons_mailid, new { placeHolder = "Email" })</span>
                                        @Html.ValidationMessageFor(m => m.Cons_mailid, "", new { @class = "text-danger" })*@
                                    <span><input name="password" type="password" data-bind="value:Cons_Pswd" placeholder="Password"></span>
                                    @*<span>@Html.PasswordFor(m => m.Cons_Pswd, new { placeHolder = "Password" }) </span>
                                        @Html.ValidationMessageFor(m => m.Cons_Pswd, "", new { @class = "text-danger" })*@
                                    @*<span class="checkbox-field checkbox-field2"><label class="checkbox checkbox4">@Html.CheckBoxFor(m => m.IsCorporate, new { @class = "checkbox", @data_bind = "checked:Check,event:{change:Change}" })<i> </i></label><span>Corporate</span></span>
                                    <span class="checkbox-field checkbox-field2"><label class="checkbox checkbox4"><input type="checkbox" data-bind="checked:Check,event:{change:Change}"><i> </i></label><span>I agree to the Terms & Conditions </span></span>*@
                                    <span><a class="forgot-pass forgot-pass2" href="@Url.Action("Forgot_Password", "Signin")">Forgot Password ?</a></span>
                                    <span> <input type="submit" data-bind="click:Signin" class="signin-btn signin-btn2" value="Sign In"></span>
                                </form>
                                @*}*@
                                <p class="create-acct-desc">Don’t you have an account ? <span><a href="@Url.Action("Index", "Signup")">Create now !</a></span></p>
                            </div>

                            <div class="dropdown-menu login-dropdown" style="display:none;">
                                <h4 class="forgot_pass">Forgot Password</h4>
                                <p class="forgot-desc">Please enter your e-mail address & we will send you a confirmation mail to reset your password.</p>
                                <form>
                                    <span><input name="username" type="text" placeholder="Email"></span>
                                    <span> <input type="submit" class="signin-btn signin-btn2" value="Submit"></span>
                                </form>
                            </div>

                        </div>

                        <!-- Sign Up -->
                        <div class="dropdown signin-details signup-details" id="signupPopUpForm">
                            @*<a class="dropdown-toggle" href="#" data-bind="click:Reset" data-toggle="dropdown">Sign Up</a>*@
                            <div class="dropdown-menu login-dropdown">
                                <h4>Sign Up</h4>
                                <form>
                                    <span><input name="firstname" type="text" data-bind="value:Cons_First_Name" placeholder="First Name"></span>
                                    <span><input name="lastname" type="text" data-bind="value:Cons_Last_Name" placeholder="Last Name"></span>
                                    <span><input name="username" type="text" data-bind="value:Cons_mailid" placeholder="Email"></span>
                                    <span><input name="password" type="password" data-bind="value:Cons_Pswd" placeholder="Password"></span>
                                    <span><input name="password" type="password" data-bind="value:ConfirmPassword" placeholder="Confirm Password"></span>
                                    <span><input name="mobile" type="text" data-bind="value:Cons_Mobile" onkeypress="if ( isNaN( String.fromCharCode(event.keyCode) )) return false;" maxlength="10" placeholder="Mobile No."></span>                                    
                                    @*<span class="checkbox-field "><label class="checkbox checkbox4">@Html.CheckBoxFor(m => m.IsCorporate, new { @class = "checkbox", @data_bind = "checked:Check,event:{change:Change}" })<i> </i></label><span>Corporate</span></span>
                                    <span class="checkbox-field "><label class="checkbox checkbox4"><input type="checkbox" data-bind="checked:Check,event:{change:Change}"><i> </i></label><span>I agree to the Terms & Conditions </span></span>*@
                                    <span> <input type="submit" data-bind="enable:Check,click:Submit" class="signin-btn signin-btn2" value="Create Account"></span>
                                </form>
                                <p class="verify-desc">You will receive an e-mail containing the account verification link.</p>
                            </div>
                        </div>

                        <div class="clear"></div>
                        <div class="overlay" id="overlay" style="display:none;"></div>
                    </li>
                    <li id="liUserName" style="display:none">
                        <div class="dropdown user-dropdown">
                            <button class="dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                <span class="user-name" id="user_name"><i class="user-icon"></i> <strong data-bind="text:User_Name"></strong></span>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu user-profile-dropdown" role="menu" aria-labelledby="dropdownMenu1">
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Index","my_account")">Profile</a></li>
                                @*<li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("Index", "my_account")">Book Room</a></li>*@
                                <li role="presentation"><a id="aLogout" href="" role="menuitem" tabindex="-1" >Logout</a></li>                                
                            </ul>
                        </div>
                    </li>
                    <li class="app-download"><a href="#"><i class="mobile-icon"></i><span class="app-desc">Book from every where,<br /> Download our Mobile App</span></a></li>
                    <div class="clear"> </div>
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <!-- End Header Section -->
    <!-- Main Section -->
    <div class="main">


        @RenderBody()


    </div>

    </div>
    <!-- End Main Section -->
    <!-- Footer Section -->
    <div class="footer">

        <section>
            <div class="wrap">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-6 col-sm-3 footer-desc">
                            <h3>About LMK</h3>
                            <ul>
                                <li><a href="@Url.Action("Contact_Us", "Home")">Contact Us</a></li>

                                <li><a href="@Url.Action("AboutUs", "Home")">About Us</a></li>
                            </ul>
                        </div>
                        <div class="col-xs-6 col-sm-3 footer-desc">
                            <h3>Service & Support</h3>
                            <ul>
                                @*<li><a href="#">Manage Bookings</a></li>
                                    <li><a href="@Url.Action("Cancelation", "Home")">Cancellation</a></li>
                                    <li><a href="@Url.Action("Complaints", "Home")">Problems/Complaints</a></li>*@
                                <li><a href="@Url.Action("Faq", "Home")">FAQs</a></li>
