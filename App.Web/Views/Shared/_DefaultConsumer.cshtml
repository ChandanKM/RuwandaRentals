<body>

    <!-- Header Section -->
    <div class="header">
        <div class="wrap">
            <div class="logo">
                <a href="@Url.Action("Index","Home")">
                    @*<img src="~/Content/Consumer/images/logo.png" title="LMK" alt="" />*@
                    <img src="~/Content/Consumer/images/_logo.png" title="LMK" alt=""/>
                </a>

            </div>

            <div class="header-right">
                <ul>
                    @*<li class="help-desc"><a class="help" href="@Url.Action("terms_conditions", "Home")">Help</a></li>*@
                    <li class="cont-info"><a href="@Url.Action("/Contact_Us", "Home")"><span class="cnt-desc">Help Line</span> <span class="cnt-number">+91 022 43438150</span> </a></li>
                    <li id="liSignIn">
