                                <li class="yahoo" title="Yahoo"><a href="#"></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="copy-right">
            <div class="wrap">
                <p class="float-lt"> © Copyright 2015 Last Minute Keys. All rights reserved.</p>
                <ul class="float-rt copy-right-nav">
                    <li><a href="#">Help</a></li>
                    <li><a href="#">Privacy</a></li>
                    <li><a href="#">Terms of Use</a></li>
                    <li class="trip-adv"><a target="_blank" href="http://www.tripadvisor.com/pages/terms.html">© TripAdvisor 2015</a></li>
                    <li><a target="_blank" href="http://www.tripadvisor.com/pages/terms.html">Ratings &amp;  Reviews </a></li>
                    <li>
                        <a target="_blank" href="http://www.tripadvisor.com/pages/terms.html">
                            <img src="~/img/tripadvisor_logo.png" />
                        </a>
                    </li>

                </ul>
                <div class="clear"></div>
            </div>
        </div>

    </div>

    <!-- End Footer Section -->
    <!-- Scripts -->
    <script src="~/Scripts/jquery-1.11.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/knockout-3.1.0.debug.js"></script>
    <script src="~/Content/Consumer/js/jquery-ui.js"></script>

    <script src="~/Scripts/jquery.storage.js"></script>
    <script src="~/Scripts/plugins/jquery.cookie.min.js"></script>

    @Scripts.Render("~/Scripts/jqueryNotification.js")
    @Scripts.Render("~/Scripts/jquery.blockUI.js")
    @Scripts.Render("~/Scripts/AppCommonScript.js")


    <!-- Styles -->
    <link href="~/Content/Consumer/css/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/error-notifier.css" rel="stylesheet" type="text/css" />

    <!-- Date Picker -->
    <script src="~/Content/Consumer/js/moment.min.js" type="text/javascript"></script>
    <script src="~/Content/Consumer/js/bootstrap.min.js"></script>
    <script src="~/Content/Consumer/js/bootstrap-datetimepicker.min.js"></script>

    <script src="~/Content/Consumer/js/jquery.lightSlider.js"></script>
    <link href="~/Content/Consumer/css/lightSlider.css" rel="stylesheet" />

    <script>
        $('.dropdown').on('show.bs.dropdown', function () {
            $('#overlay').fadeIn('fast');
        })
        $('.dropdown').on('hide.bs.dropdown', function () {
            $('#overlay').fadeOut('fast');
        })
    </script>

    <!-- Slider -->
    <script src="~/Content/Consumer/js/jquery.flexslider.js"></script>
    <script>
        $(window).load(function () {
            $('#hotel-details').flexslider({
                animation: "slide",
                controlNav: false,
                itemMargin: 0,
                animationLoop: true
            });

            $('#hotdeals').flexslider({
                animation: "slide",
                animationLoop: false,
                itemWidth: 350,
                itemMargin: 15,
                minItems: 2,
                move: 1,
                controlNav: false,
                before: function () {
                    $('.flexslider .slides').removeClass('end');
                },
                end: function () {
                    $('.flexslider .slides').addClass('end');
                }
            });

            $('#bestoffers').flexslider({
                animation: "slide",
                animationLoop: true,
                reverse: false,
                itemWidth: 375,
                itemMargin: 15,
                controlNav: false,
                before: function () {
                    $('.flexslider .slides').removeClass('end');
                },
                end: function () {
                    $('.flexslider .slides').addClass('end');
                }

            });

            //$('.flexslider').flexslider({
            //    animation: "slide",
            //    animationLoop: false,
            //    itemWidth: 345,
            //    itemMargin: 5,
            //    controlNav: false
            //});
            $('#lightSlider').lightSlider({
                gallery: true,
                item: 1,
                loop: true,
                slideMargin: 0,
                thumbItem: 0
            });

        });
    </script>

    <script>
        $(document).ready(function () {

        });
