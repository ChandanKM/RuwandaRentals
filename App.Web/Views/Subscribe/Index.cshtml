                    <div class="clear"></div>*@
                    <input id="emailText" data-bind="value:Email" placeholder="Your Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Your Email';}" type="text" />

                    <input type="submit" value="" data-bind="click:SubmitSub" />
         
                    </form>
                    <div class="clear"></div>


</div></div></div>
        <script src="@Url.Content("~/Scripts/Subscribe/submit.js")" type="text/javascript"></script>
</body>
</html>
