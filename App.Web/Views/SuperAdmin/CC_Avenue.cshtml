@{
    ViewBag.Title = "CC_Avenue";
    Layout = "~/Views/Shared/_SuperadminLayout.cshtml";
}

@model App.Web.ViewModels.CCAvenueViewModel

@{
    ViewBag.Title = "LMK Room Type";
}

<link href="~/Content/error-notifier.css" rel="stylesheet" />

@Scripts.Render("~/Scripts/jqueryNotification.js")
@Scripts.Render("~/Scripts/jquery.blockUI.js")
@Scripts.Render("~/Scripts/AppCommonScript.js")

<div id="divRoomTypes">
    <div class="row">
        <div class="col-lg-12">
            <input type="button" id="btnCreate" style="float:right;" value="Add CC Avenue" class="btn btn-sm btn-success" />
            <div class="clear"></div>
        </div>
    </div><br />

    <div class="widget box" style="display:none" id="divCreateCC_Avenue">
        <div class="widget-header">
            <h4><i class="icon-reorder"></i> Create CC_Avenue</h4>
        </div>
        <div class="widget-content">
            <input type="hidden" style="display:none" data-bind="value:Cav_Id" />
            <div class="form-group">
                <label class="col-md-3 control-label">CC Avenue Name</label>
                <div class="col-md-9">
                    <input id="Cav_Name" class="form-control input-width-xlarge" type="text" data-bind="value: Cav_Name" />
                </div>
            </div><br /><br />
            <div class="form-group">
                <label class="col-md-3 control-label">CC Avenue Percentage</label>
                <div class="col-md-9">
                    <input id="Cav_Percent" class="form-control input-width-xlarge" type="text" data-bind="value: Cav_Percent" />
                </div>
            </div><br /><br />
            <div class="form-group">
                <label class="col-md-3 control-label">CC Avenue Description</label>
                <div class="col-md-9">
                    <textarea id="Cav_Descr" rows="3" class="form-control input-width-xlarge" style="width:300px;" data-bind="value: Cav_Descr"></textarea>
                </div>
            </div><br /><br /><br /><br />
            <div class="modal-footer">
                <div class="form-group">

                    @*<input id="btnReset" type="button" value="Reset" data-bind="click: ResetForm" class="btn btn-lg btn-info" />*@
                    <input id="btnSave" type="button" value="Save" data-bind="click: SaveCC_Avenue" class="btn btn-lg btn-primary" />
                    <input id="btnCancel" type="button" value="Cancel" data-bind="click: Cancel" class="btn btn-lg btn-danger" />
                    <input id="btnUpdate" type="button" value="Update" style="display:none" data-bind="click: UpdateCC_Avenue" class="btn btn-lg btn-primary" />

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Manage CC Avenue</h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>

                <div class="widget-content no-padding">
                    <table class="table table-striped table-bordered table-hover table-checkable RoomTypeGrid">
                        <thead>
                            <tr>
                                <th style="display:none">
                                    Id
                                </th>
                                <th>
                                    CC Avenue
                                </th>
                                <th>
                                    Percent
                                </th>
                                <th>
                                    Description
                                </th>
                                <th> Options</th>

                            </tr>
                        </thead>
                        <tbody data-bind="foreach: CC_AvenueList">
                            <tr>

                                <td style="display:none" data-bind="text: Cav_Id"></td>
                                <td data-bind="text: Cav_Name"></td>
                                <td data-bind="text: Cav_Percent() + ' %'"></td>
                                <td data-bind="text: Cav_Descr"></td>

                                <td>
                                    <a data-bind="click:Edit" class="btn btn-default btn-xs">Edit</a>
                                    @*<a data-bind="click:Suspend" class="btn btn-info btn-xs">Suspend</a>*@
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/CCAvenue/common.js")" type="text/javascript"></script>


<script src="~/Scripts/SuperAdminMaster.js"></script>
