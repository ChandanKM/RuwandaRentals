
@{
    ViewBag.Title = "Facilities";
    Layout = "~/Views/Shared/_SuperadminLayout.cshtml";
}

<form class="form-horizontal">
   
        <a style="margin-left: 88.4%;cursor:pointer;" onclick="Create();" class="btn btn-success">Create Facility</a>


    <div class="row">
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Manage Facilities</h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                        </div>
                    </div>
                </div>

                <div class="widget-content no-padding">
                    <table class="table table-striped table-bordered table-hover table-checkable FacilityDT">
                        <thead>
                            <tr>
                                <th>
                                    Facility Id
                                </th>
                                <th>
                                    Facility Name
                                </th>
                                @*<th>
                                    Facility Type
                                </th>*@
                                <th>
                                    Facility description
                                </th>
                                <th>
                                    Facility Image
                                </th>
                                <th>
                                    Action
                                </th>


                            </tr>
                        </thead>
                        <tbody data-bind="foreach: Facility" id="FacilityDT">
                            <tr>

                                <td data-bind="text: Facility_Id"></td>
                                <td data-bind="text: Facility_Name"></td>

                                @*<td data-bind="text: Facility_Type"></td>*@
                                <td data-bind="text: Facility_descr"></td>

                                <td> <img data-bind="attr:{src: Facility_Image_dir}" /></td>

                                @*<td data-bind="text: Facility_Active_flag"></td>*@

                                <td>
                                    <a style="cursor:pointer;" data-bind="click: editFacility"><img src="../../img/Splitted_Images/Edit Button.png" title="Edit" /></a>
                                    <a style="cursor:pointer" data-bind="click: deleteFacility"><img src="../../img/Splitted_Images/disable_button.png" title="Suspend" /></a>
                                
                                  
                                </td>
                                @*<td>
                                        <a style="cursor:pointer" data-bind="click: FacilityListVM.DeleteFacility">Delete</a>

                                    </td>*@
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</form>

<script src="~/Scripts/Facility/Bind.js"></script>
<script src="~/Scripts/SuperAdminMaster.js"></script>