
@{
    ViewBag.Title = "Tax_Report";
    Layout = "~/Views/Shared/_SuperadminLayout.cshtml";
}

<meta charset="utf-8">
<title>LMK :: Manage Report</title>
<link rel="shortcut icon" href="~/img/Splitted_Images/favicon.ico" type="image/x-icon" />
<meta name="keywords" content="Last Minute Keys" />
<meta name="description" content="Last Minute Keys" />
@*Scripts for create*@
<style>
    div.dataTables_filter label {
        margin-bottom: 20px;
        margin-right: 10px;
    }

        div.dataTables_filter label input {
            border: 1px solid #DDD;
            vertical-align: middle;
        }

    #txtFrom, #txtTo {
        border: 1px solid #DDD;
    }

    .dataTables_paginate .pagination {
        margin-top: 10px;
    }

    .pagination > li > a, .pagination > li > span {
        margin-left: 5px !important;
    }

    div.dataTables_info {
        padding: 5px;
        border-top: 1px solid #eee;
        color: #444;
    }

    #BookingsDT thead tr:first-child > th {
        border-top: 1px solid #ddd;
    }

    #BookingsDT thead > tr > th {
        font-size: 12px;
        vertical-align: middle;
    }
</style>
<!-- DataTables -->

<form class="form-horizontal">

    <div class="crumbs">
        <ul id="breadcrumbs" class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="#">Home</a>
            </li>

            <li class="current">
                Reports
            </li>
            <li class="current">
                Tax Report
            </li>

        </ul>

    </div><br /><br />

    <br /><br />
    <div class="row" id="divReportTable">
        <div class="col-md-12" style="margin-top: -5%;">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i> Tax Report</h4>
                    <div class="toolbar no-padding">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>

                        </div>
                    </div>

                </div>
                <div style="display:inline-block;position:relative;top:15px;left:10px;z-index: 1;">
                    <label>Number of days report &nbsp;</label>
                    <select hidden onchange="myFunction()" id="Days" style="display:none;" class="form-control input-width-xlarge"><option>30</option><option>60</option><option>90</option></select>
                    <input type="text" placeholder="Report From" id="txtFrom" />
                    <input type="text" placeholder="Report To" id="txtTo" />

                    <a onclick="RefineReport()" class="btn btn-success">Submit</a>
                </div>
                <div class="widget-content no-padding" style="margin-top:-20px;position:inherit;">
                    <table class="table table-striped table-bordered table-hover table-checkable BookingsDT">
                        <thead>
                            <tr>

                                @*<th>
                                       Vendor
                                    </th>
                                    <th>
                                       Property
                                    </th>
                                    <th>
                                       Param Code
                                    </th>*@
                                <th>
                                    Tax Description
                                </th>
                                @*<th>
                                       Param Type
                                    </th>*@
                                <th>
                                    Invoice Number
                                </th>

                                <th>
                                    Tax Amount
                                </th>
                                <th>
                                    Room Rate
                                </th>
                                <th>
                                    Selling Rate
                                </th>
                                @*<th>
                                        Options
                                    </th>*@

                            </tr>

                        </thead>
                        <tbody data-bind="foreach: TaxList" id="BookingsDT">
                            <tr>


                                @*<td data-bind="text: VendorID"></td>
                                    <td data-bind="text: Prop_Id"></td>
                                    <td data-bind="text: V_param_Code"></td>*@
                                <td data-bind="text: V_param_desc"></td>
                                @*<td data-bind="text: VparamType"></td>*@

                                <td data-bind="text: Inv_Num"></td>
                                <td data-bind="text: Tax_Amnt"></td>
                                <td data-bind="text: Room_Rate"></td>
                                <td data-bind="text: Camo_Rate"></td>

                                @* <td>
                                        <a style="cursor:pointer;" data-bind="click:DT"> Details</a>
                                    <a style="cursor:pointer" data-bind="click: deleteProperty"><img src="../../img/Splitted_Images/disable_button.png" /></a>

                                                                </td>*@
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <div data-bind="foreach: AverageList"><span><b>Total Invoice Amount: </b></span><span data-bind="text:roomrate"></span><br />
            <span><b>Total Selling Amount: </b></span><span data-bind="text:sellingrate"></span><br />
            <span><b>Total Tax Amount: </b></span><span data-bind="text:tax"></span>
        </div><br /><br />
    </div>
</form>
<script src="~/Scripts/jquery.storage.js"></script>


<script src="~/Scripts/TaxReport/Bind.js"></script>

<script src="~/Scripts/SuperAdminMaster.js"></script>