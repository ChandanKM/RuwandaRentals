@{
    ViewBag.Title = "Index";
}
<link href="~/Content/font-awesome.css" rel="stylesheet" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="~/Content/error-notifier.css" rel="stylesheet" />
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/Scripts/jquery-1.8.2.min.js")


@Scripts.Render("~/Scripts/jquery-ui-1.10.3.js")
@Scripts.Render("~/Scripts/knockout-2.3.0.js")

<script src="~/Scripts/User/knockout.mapping-latest.debug.js"></script>
@Scripts.Render("~/Scripts/jqueryNotification.js")
@Scripts.Render("~/Scripts/jquery.blockUI.js")
@Scripts.Render("~/Scripts/AppCommonScript.js")


<div id="tab_1_1">
    <div class="row">
        <h2>User Create</h2>
        <div class="col-lg-12">

            <div class="form-horizontal">
                <input type="hidden" data-bind="value:User_Id" />
                <div class="control-group">
                    <label class="control-label" for="Name">Type <span class="required"></span></label>
                    <div class="controls">
                        <input id="UserType" type="text" data-bind="value: User_Type" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="LastName">User Code<span class="required"></span></label>
                    <div class="controls">
                        <input id="UserType" type="text" data-bind="value: User_Code" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="LastName">User Name <span class="required"></span></label>
                    <div class="controls">
                        <input id="UserType" type="text" data-bind="value: User_Name" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="LastName">First Name <span class="required"></span></label>
                    <div class="controls">
                        <input id="UserType" type="text" data-bind="value: Firstname" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="LastName">Last Name <span class="required"></span></label>
                    <div class="controls">
                        <input id="UserType" type="text" data-bind="value: Lastname" />
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="LastName">Password <span class="required"></span></label>
                    <div class="controls">
                        <input id="UserType" type="password" data-bind="value: Pswd" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="LastName">Department <span class="required"></span></label>
                    <div class="controls">
                        <input id="UserType" type="text" data-bind="value: Department" />
                    </div>
                </div>

                <div class="control-group align-center">
                    <input id="btnReset" type="button" value="Reset" data-bind="click: ResetForm" class="btn btn-lg btn-primary" />
                    <input id="btnSave" type="button" value="Save" data-bind="click: SaveUserProfile" class="btn btn-lg btn-primary" />
                    <input id="btnUpdate" type="button" style="display:none" value="Update" data-bind="click: UpdateProfile" class="btn btn-lg btn-primary" />
                </div>
            </div>

        </div>

    </div>


    <div class="row">
        <div class="col-lg-12">
            <form class="form-horizontal">
                <fieldset>
                    <legend>User Profile List</legend>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th style="display:none">
                                    Id
                                </th>
                                <th>
                                    Type
                                </th>
                                <th>
                                    Name
                                </th>
                                <th> Department</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: UserProfileList" id="divUserProfileGrid">
                            <tr>
                                <td style="display:none" data-bind="text: User_Id"></td>
                                <td data-bind="text: User_Type"></td>
                                <td data-bind="text: FullName"></td>
                                <td data-bind="text: Department"></td>
                                <td>
                                    <button data-bind="click:Edit">Edit</button>
                                    <button data-bind="click:Suspend">Suspend</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/UserProfile/AddEditBind_userProfile.js")" type="text/javascript"></script>