                            <div class="col-md-9">

                                @*<input type="text" name="regular" class="form-control" data-bind=" text: vndr_id">*@
                                <textarea id="Vendor_Id" class="form-control input-width-xlarge" data-bind='value: Vndr_Addr1'></textarea>
                            </div>
                        </div>

                        <div class="form-group">
