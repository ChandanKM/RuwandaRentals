@model App.Web.ViewModels.VendorViewModel

@{
    ViewBag.Title = "Create";
}
@*Scripts for create*@

<link href="~/Content/font-awesome.css" rel="stylesheet" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="~/Content/error-notifier.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>

@Scripts.Render("~/Scripts/knockout-2.3.0.js")
@Scripts.Render("~/Scripts/jqueryNotification.js")
@Scripts.Render("~/Scripts/jquery.blockUI.js")
@Scripts.Render("~/Scripts/AppCommonScript.js")
<style>
    #ui-id-1 {
        z-index: 9999;
    }
</style>
@*popup code*@
<div class="modal fade" style="margin-left: 29%;" id="myModal1">
    <div class="modal-dialog" style="width:50%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Upload photo</h4>
            </div>
            <form id="ImgUpload" action="/Vendor/Upload" method="post" enctype="multipart/form-data">
                <div class="modal-body">



                    <label for="photo">Profile Photo:</label>
                    <input type="file" name="photo" id="photo" accept="image/*" />



                </div>
                <div class="modal-footer">
                    <input type="submit" value="Upload" class="btn btn-lg btn-info" />
                    <button type="button" class="btn btn-lg btn-primary" data-dismiss="modal">Close</button>

                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
@*popup end*@
<div class="modal fade" style="margin-left: 29%;" id="mySearchModel">
    <div class="modal-dialog" style="width:50%;margin-left: 48px;margin-top: 145px; ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">City</h4><span>Ex:Hsr Layout,Bangalore</span>
            </div>
            <div class="modal-body">

                <input type="text" id="txtDemo" placeholder="Please enter location followed by City" class="form-control input-width-xlarge">

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-lg btn-primary" data-dismiss="modal">Submit</button>

            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<form class="form-horizontal" method="post">


  
    <!-- Breadcrumbs line -->
    <div class="crumbs" style="margin-left:-0.1%; margin-right:-0.1%;">
        <ul id="breadcrumbs" class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @*<a href="PropertyPage">Vendor</a>*@
                @Html.ActionLink("Vendor", "PropertyPage", "Vendor")
            </li>
            <li class="current">
                <a href="pages_calendar.html" title="">Profile</a>
            </li>
        </ul>
    </div>
    <!-- /Breadcrumbs line -->
    <!--=== Page Header ===-->

