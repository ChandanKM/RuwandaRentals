@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>VCNR :: Create New Password</title>
    <link rel="shortcut icon" href="~/img/Splitted_Images/favicon.ico" type="image/x-icon" />
    <meta name="keywords" content="Last Minute Keys" />
    <meta name="description" content="Last Minute Keys" />
    <link rel="stylesheet" type="text/css" href="../../Content/LoginContent/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="../../Content/LoginContent/css/custom-style.css">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css'>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/error-notifier.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.3.js")


    @Scripts.Render("~/Scripts/knockout-2.3.0.js")
    @Scripts.Render("~/Scripts/jqueryNotification.js")
    @Scripts.Render("~/Scripts/jquery.blockUI.js")
    @Scripts.Render("~/Scripts/AppCommonScript.js")
    
</head>

<body class="login-page">
    <!-- Login Page -->
    <div class="login-page-overlay"></div>
    <div class="login-content">
        <div class="login-page-logo">
            <a href="#"><img src="../../Content/LoginContent/images/logo.png" title="VCNR EazyRentals " alt="" /> </a>
        </div>
        <div class="login-fields">
            <h2>Create New Password</h2>

            <form method="post" >
                <div class="login-email-field">
                    <img src="../../Content/LoginContent/images/password-icon.png" alt="" />
                    <input id="txtPassword" type="password" data-bind='value: Password' placeholder="New Password" />
                </div>

                <div class="login-password-field">
                    <img src="../../Content/LoginContent/images/password-icon.png" alt="" />
                    <input id="txtConfirmPassword" type="password" data-bind='value: ConfirmPassword' placeholder="Confirm Password" />
                </div>

                <div class="login-submit-field">
                    <input id="btnCreate" type="submit" data-bind="click:Submit" value="Submit" />
                </div>

            </form>
            <div class="forgot-password">
                <h3><a href="@Url.Action("Index","Login")">Login</a></h3>
            </div>
        </div>
    </div>
    <!-- End Login Page -->
    <div class="footer">
        <p> © Copyright 2020 VCNR EazyRentals. All rights reserved.</p>
    </div>
    <script src="@Url.Content("~/Scripts/CreatePassword/createpassword.js")" type="text/javascript"></script>
</body>
</html>
