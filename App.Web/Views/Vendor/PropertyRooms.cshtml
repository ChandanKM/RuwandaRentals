@{
    ViewBag.Title = "PropertyRooms";
}


<link href="~/Content/font-awesome.css" rel="stylesheet" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<link href="~/Content/error-notifier.css" rel="stylesheet" />



@*<script src="~/Scripts/jquery-1.8.2.js"></script>*@
@Scripts.Render("~/Scripts/jqueryNotification.js")
@Scripts.Render("~/Scripts/jquery.blockUI.js")
@Scripts.Render("~/Scripts/AppCommonScript.js")


<script src="~/scripts/master.js"></script>

<div>
    <div>
        <div class="row">
            <div class="span5">
                <div class="control-group">
                    <div class="controls">
                        <div id="modelSelectProperty">
                            <div>
                                <div>

                                    <div>
                                        <div>
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 style="text-align:center;">Please choose a property to view the room details</h4>
                                        </div>
                                        <div class="form-group">
                                            <div style="width:585px;margin:0 auto;border:1px solid #ccc;background:#ECECEC;padding:5%;text-align:center;margin-top:30px;">
                                                <label class="control-label" style="margin-right:2px;">Select a Property<span class="qs">? <span class="hint above">Select a property to manage rooms!</span></span></label>
                                                <select id="PropId" style="display:inline-block;" class="form-control input-width-xlarge" data-bind="options: PropLookup, value: SelectedProp,optionsText: 'PropName' ,optionsValue:'PropId' "></select>
                                                <input id="btnCreate" type="button" value="SUBMIT" data-bind="click: ViewRooms" class="btn btn-sm btn-primary" />
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Master.js"></script>
<script src="~/Scripts/jquery.cookie.js"></script>
<script src="~/Scripts/jquery.storage.js"></script>
<script src="~/Scripts/Rooms/RoomsProperties.js"></script>

